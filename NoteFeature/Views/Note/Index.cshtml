@model IEnumerable<NoteFeature.Models.Note>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-5 mb-0">
        <i class="bi bi-journal-text text-primary"></i> My Notes
    </h1>
    <a asp-controller="Note" asp-action="Create" class="btn btn-success btn-lg shadow-sm">
        <i class="bi bi-plus-lg"></i> Add Note
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <i class="bi bi-info-circle"></i> No notes found. Click <strong>Add Note</strong> to create your first note!
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var note in Model)
        {
            <div class="col-12 col-sm-6 col-md-4">
                <div class="card h-100 shadow-sm border-0 note-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-2">
                            <i class="bi bi-sticky text-warning"></i> @note.Title
                        </h5>
                        <p class="card-text flex-grow-1">@note.Content</p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <small class="text-muted">
                                <i class="bi bi-calendar3"></i>
                                @note.CreatedAt.ToString("yyyy-MM-dd HH:mm")
                            </small>
                            <div>
                                <a asp-controller="Note" asp-action="Edit" asp-route-id="@note.Id" class="btn btn-outline-primary btn-sm me-1" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-controller="Note" asp-action="Delete" asp-route-id="@note.Id" class="btn btn-outline-danger btn-sm" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <style>
        .note-card {
            transition: box-shadow 0.2s, transform 0.2s;
        }
        .note-card:hover {
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
            transform: translateY(-4px) scale(1.02);
        }
    </style>
}